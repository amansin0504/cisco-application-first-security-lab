# move into lab dir
cd $HOME/environment/lab/

# set env vars
source $HOME/.bashrc

# get latest copy of lab guide
git fetch
git checkout origin/master -- docs/include/lab-guide.md

# replace env vars
find ./docs/include/lab-guide.md | \
	xargs -I % sh -c 'envsubst \$DOLLAR_SIGN,\$DUO_SECRET,\$AWS_FLOW_LOG_BUCKET,\$AWS_CF_STACK_NAME,\$DEVNET_EMAIL_ADDRESS,\$CLOUD9_IP_ADDRESS,\$AWS_TET_AGENT_BUCKET,\$POD_NAME,\$POD_PASSWORD,\$VPC_PRIV_SUBNET_1_ID,\$VPC_PRIV_SUBNET_1_AZ,\$VPC_PRIV_SUBNET_2_ID,\$VPC_PRIV_SUBNET_2_AZ,\$AWS_ACCT_ID,\$AWS_REGION,\$SWC_K8S_SA_SECRET <% > %.tmp ; mv %.tmp %'